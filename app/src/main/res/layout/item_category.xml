<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/layout_margin_cardview"
    app:cardBackgroundColor="@color/main_background_color"
    app:cardCornerRadius="@dimen/corner_radius"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardForegroundColor="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_image"
            android:contentDescription="@string/category_image_desc"
            android:scaleType="centerCrop"
            tools:src="" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/StyleCardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_text_view"
            tools:srctext="заголовок" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/StyleCardViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_text_view"
            tools:srctext="описание" />

    </LinearLayout>

</androidx.cardview.widget.CardView>