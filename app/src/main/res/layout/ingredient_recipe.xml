<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_medium_size">

    <TextView
        android:id="@+id/tvIngredientName"
        style="@style/StyleViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="куриное яйцо" />

    <TextView
        android:id="@+id/tvIngredientQuantity"
        style="@style/StyleViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_margin_gap"
        android:textAllCaps="true"
        app:layout_constraintEnd_toStartOf="@+id/tvIngredientMeasure"
        tools:text="2" />

    <TextView
        android:id="@+id/tvIngredientMeasure"
        style="@style/StyleViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="штуки" />

</androidx.constraintlayout.widget.ConstraintLayout>