<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRecipeElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_normal_size"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="@dimen/layout_normal_size"
    app:cardForegroundColor="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRecipeCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_image"
            android:contentDescription="@string/category_image_desc"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTitleRecipeCard"
            style="@style/StyleCardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_normal_size"
            tools:text="заголовок" />

    </LinearLayout>

</androidx.cardview.widget.CardView>